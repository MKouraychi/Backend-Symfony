{% extends 'back.html.twig' %}
{% block body %}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <button class="btn btn-danger btn-rounded btn-fw btn-icon-text"><a href="{{ path('newOffre') }}">Ajouter une nouvelle offre</a></button>

                <div class="table-responsive">
                    <table class="table table-striped">



                        <tr>
                            <td> Nom</td> <td> {{ offre.nomOffre }}</td>
                        </tr>
                        <tr>
                            <td>Destionation</td>   <td>{{offre.destination.pays}}</td>
                        </tr>
                        <tr>
                            <td>Prix</td> <td>{{ offre.prixOffre }}</td>
                        </tr>
                        <tr>
                            <td>Nombre de vues</td><td>{{ offre.nbdevues }}</td>
                        </tr>
                        <tr>
                            <td>Image</td><td> <img src="{{ asset('uploads/images/'~ offre.image) }}"></td>
                        </tr>
                        <tr>
                            <td>Date de d√©but</td><td>{{ offre.dateDebut|date('d-m-Y') }}</td>
                        </tr>
                        <tr>
                            <td>Date de fin</td><td>{{ offre.dateFin|date('d-m-Y') }}</td>
                        </tr>
                        <tr>
                            <td>nombre de vues</td><td>{{ offre.nbdevues }}</td>
                        </tr>

                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Toutes les participants</h4>
                <div class="table-responsive">
                    <table class="table table-striped">



                        {% if offre.users|length>0 %}
                            <tr> les participants</tr>
                            {% for user in offre.users %}
                                <tr> <td>{{user.Nom}} {{ user.Prenom }}</td></tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td><p>Cette offre n'as pas de paticipants</p></td>
                            </tr>
                        {% endif %}
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
